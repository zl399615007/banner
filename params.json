  "body": "<!DOCTYPE html>\r\n<html>\r\n<head lang=\"en\">\r\n    <meta charset=\"UTF-8\">\r\n    <title>选项卡</title>\r\n    <style type=\"text/css\">\r\n        #tab {\r\n            width: 800px;\r\n            margin: 10px auto;\r\n\r\n        }\r\n\r\n        #tab ul {\r\n            padding: 0;\r\n            margin: 0;\r\n            overflow: hidden;\r\n            list-style: none;\r\n        }\r\n\r\n        #tab li {\r\n            float: left;\r\n            width: 130px;\r\n            height: 30px;\r\n            font-size: 16px;\r\n            text-align: center;\r\n            line-height: 30px;\r\n            font-size: 16px;\r\n            background: #9c9;\r\n            margin-left: 10px;\r\n            cursor: pointer;\r\n            position: relative;\r\n            left: -10px;\r\n\r\n        }\r\n\r\n        #tab li.selectedLi {\r\n            background: #ccc;\r\n            font-weight: bold;\r\n        }\r\n\r\n        #tab div {\r\n            clear: both;\r\n            height: 400px;\r\n            padding: 10px;\r\n            background: #ccc;\r\n            display: none;\r\n            text-align: center;\r\n            line-height: 400px;\r\n\r\n        }\r\n\r\n        #tab div.selectedDiv {\r\n            display: block;\r\n        }\r\n    </style>\r\n</head>\r\n<body>\r\n<div id=\"tab\">\r\n    <!--div#tab>(ul>li*4)+div*4-->\r\n    <ul>\r\n        <li class=\"selectedLi\">选项一</li>\r\n        <li>选项二</li>\r\n        <li>选项三</li>\r\n        <li>选项四</li>\r\n        <li>选项五</li>\r\n    </ul>\r\n\r\n    <div class=\"selectedDiv\">内容一</div>\r\n    <div>内容二</div>\r\n    <div>内容三</div>\r\n    <div>内容四</div>\r\n    <div>内容五</div>\r\n\r\n\r\n</div>\r\n<script type=\"text/javascript\">\r\n    //JS中操作类样式用className属性\r\n    var oDiv=document.getElementById(\"tab\");\r\n    var oLis=oDiv.getElementsByTagName(\"li\");\r\n    var oDivs=oDiv.getElementsByTagName(\"div\");\r\n    var n=0;\r\n    function changeTab (index){\r\n        oLis[n].className=\"\";\r\n        oDivs[n].className=\"\";\r\n        oLis[index].className=\"selectedLi\";\r\n        oDivs[index].className=\"selectedDiv\";\r\n        n=index\r\n\r\n    }\r\n\r\n//    for(var i=0;i<oLis.length;i++){\r\n//        ;function(i){//加了自运行的函数，形成闭包\r\n //       oLis.item(i).onclick=function(){changeTab(i)};\r\n//        当循环执行的时候做事件绑定\r\n//    }(i);\r\n\r\n    for(var i=0;i<oLis.length;i++){\r\n        oLis.item(i).onclick=function (i){\r\n            return function (){changeTab(i)};\r\n        }(i);\r\n    }\r\n//\r\n//    }\r\n//    //循环和changeTag方法不是一起执行的\r\n//    for(var i=0;i<oLis.length;i++){\r\n//        var oLi=oLis.item(i);\r\n//        oLi.n=i;//把当前循环执行的时候的i的值保存到这个元素的自定义属性上\r\n//        oLi.onmousemove=function(){\r\n//            //这里的this是指的当前被点中的那个li\r\n//            changeTab(this.n);\r\n//        }\r\n//    }\r\n\r\n</script>\r\n\r\n\r\n</body>\r\n</html>\r\n",
